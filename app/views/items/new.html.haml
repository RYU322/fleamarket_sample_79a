.SellProductPage
  = render "devise/registrations/head_logo"
  .SellProductPage__container
    = form_with model: @item, class: "FormArea"  do |f|
      .FormArea__content 
        .FormBlock
          .ImageUploadArea
            .ImageUploadArea__content
              出品画像
              %span.MustDescription
                必須
            %p.description
              最大10枚までアップロードできます
            .ProductFileContainer
              = f.fields_for :item_images, class: "UploadArea" do |i|
                = i.file_field :image_src
        .FormBlock
          .FormGroup
            .FormGroup__content
              商品名
              %span.MustDescription
                必須
            = f.text_field :name, class: "FormGroup__input", placeholder:"40文字まで"
          .FormGroup
            .FormGroup__content
              商品の説明
              %span.MustDescription
                必須
            = f.text_area :introduction, class: "textarea", placeholder:"商品の説明（必須1,000文字以内）（色、素材、重さ、定価、注意点など）", cols: "40", rows: "7" 
        .FormBlock
          .FormBlock__title
            商品の詳細
          .FormGroup
            .FormGroup__content
              カテゴリー
              %span.MustDescription
                必須
            = f.collection_select :category, Itemcategory.all, :id, :name, prompt: "--"
            .FormGroup__content
              ブランド
              %span.FreeDescription
                任意
            = f.text_field :name, class: "FormGroup__input", placeholder:"例）Supreme"
            .FormGroup__content
              商品の状態
              %span.MustDescription
                必須
            = f.collection_select :item_condition, Itemcondition.all, :id, :name, prompt: "--"

        .FormBlock
          .FormBlock__title
            配送について
          .FormGroup
            .FormGroup__content
              配送料の負担
              %span.MustDescription
                必須
            = f.collection_select :postage_payer, Postage.all, :id, :name, prompt: "--"

          .FormGroup
            .FormGroup__content
              発送元の地域
              %span.MustDescription
                必須
            = f.collection_select :prefecture, Prefecture.all, :id, :name, prompt: "--"

          .FormGroup
            .FormGroup__content
              発送までの日数
              %span.MustDescription
                必須
            = f.collection_select :preparation_period, Shipment.all, :id, :name, prompt: "--"
        .FormBlock
          .FormBlock__title
            価格（¥300〜9,999,999）
          .FormGroupB
            .FormGroupB__content
              販売価格
              %span.MustDescription
                必須
            .FormGroupB__inputArea
              %p.unit
                ¥
              = f.number_field :price, class: "FormGroupB__inputArea--contents"
      .FormArea__footer
        .SubmitArea
          = f.submit '出品する', class: 'SellBtn'
        .BackLinkArea
          = link_to "もどる", root_path, class: "BackToIndex"
  .AccountPage__etc
    = render "devise/registrations/foot_logo"
